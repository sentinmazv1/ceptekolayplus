    { value: 'Aranacak', label: 'Aranacak' },
    { value: 'Ula≈üƒ±lamadƒ±', label: 'Ula≈üƒ±lamadƒ±' },
    { value: 'Me≈ügul/Hattƒ± kapalƒ±', label: 'Me≈ügul/Hattƒ± kapalƒ±' },
    { value: 'Yanlƒ±≈ü numara', label: 'Yanlƒ±≈ü numara' },
    { value: 'Daha sonra aranmak istiyor', label: 'Daha sonra aranmak istiyor' },
    { value: "WhatsApp'tan bilgi istiyor", label: "WhatsApp'tan bilgi istiyor" },
    { value: 'E-Devlet payla≈ümak istemedi', label: 'E-Devlet payla≈ümak istemedi' },
    { value: 'Ba≈üvuru alƒ±ndƒ±', label: 'Ba≈üvuru alƒ±ndƒ± (Y√∂netici Onayƒ±nda)' },
    { value: 'Maƒüazaya davet edildi', label: 'Maƒüazaya davet edildi' },
